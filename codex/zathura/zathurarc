set completion-highlight-fg  "#eceff4"
set completion-group-bg      "#3b4252"
set completion-group-fg      "#88c0d0"

set statusbar-fg             "#eceff4"
set statusbar-bg             "#222222"
set statusbar-h-padding      10
set statusbar-v-padding      10

set notification-bg          "#222222"
set notification-fg          "#eceff4"
set notification-error-bg    "#222222"
set notification-error-fg    "#bf616a"
set notification-warning-bg  "#222222"
set notification-warning-fg  "#ebcb8b"
set selection-notification   "true"

set inputbar-fg              "#eceff4"
set inputbar-bg              "#222222"

set recolor                  "false"
set recolor-lightcolor       "#222222"
set recolor-darkcolor        "#222222"

set index-fg                 "#eceff4"
set index-bg                 "#2e3440"
set index-active-fg          "#eceff4"
set index-active-bg          "#4c566a"

set render-loading-bg        "#2e3440"
set render-loading-fg        "#eceff4"

set highlight-color          "#88c0d0"
set highlight-active-color   "#5e81ac"

set adjust-open           width
set incremental-search    false
set statusbar-home-tilde  true
set selection-clipboard   clipboard

set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-step 50

map <PageUp> scroll full_up
map <PageDown> scroll full_down
map <BackSpace> scroll full_up all
map <M-v> scroll full_up
map <C-v> scroll full_down

map + zoom in
map - zoom out
map q quit
map w adjust_window width
map z adjust_window bestfit

map <Space> navigate next
map <S-Space> navigate previous
map b toggle_statusbar

map <C-g> abort
